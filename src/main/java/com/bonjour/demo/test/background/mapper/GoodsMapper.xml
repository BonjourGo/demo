<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bonjour.demo.test.background.mapper.GoodsMapper">

    <select id="getList" resultType="com.bonjour.demo.test.common.vo.ShoppingCartGoods">
        select
            a.id goodsId,
            b.id goodsTypeId,
            a.name goodsName,
            b.name goodsTypeName,
            b.stock,
            b.origin_price,
            b.actual_price
        from goods_type b left join goods a on a.id = b.goods_id
        where b.id in
        <foreach collection="idList" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>
</mapper>